# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig*.json ./
COPY nest-cli.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY src ./src

# Build the application
RUN npm run build

# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app/services/event-service

# Copy service manifests
COPY services/event-service/package*.json ./
COPY services/event-service/tsconfig*.json ./
COPY services/event-service/nest-cli.json ./

# Bring shared enums/types into build context
COPY shared ./shared

RUN npm install

COPY services/event-service/src ./src

RUN npm run build

# Stage 2: Production
FROM node:20-alpine

WORKDIR /app/services/event-service

COPY services/event-service/package*.json ./
COPY shared ./shared

RUN npm install --omit=dev

COPY --from=builder /app/services/event-service/dist ./dist

EXPOSE 3001

CMD ["node", "dist/src/main.js"]