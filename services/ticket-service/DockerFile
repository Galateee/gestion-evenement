# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Copy service manifests
COPY services/ticket-service/package*.json ./services/ticket-service/
COPY services/ticket-service/tsconfig*.json ./services/ticket-service/
COPY services/ticket-service/nest-cli.json ./services/ticket-service/

# Copy shared folder at root level
COPY shared ./shared

WORKDIR /app/services/ticket-service

RUN npm install

COPY services/ticket-service/src ./src

RUN npm run build

# Stage 2: Production
FROM node:20-alpine

WORKDIR /app/services/ticket-service

COPY services/ticket-service/package*.json ./
COPY --from=builder /app/shared /app/shared

RUN npm install --omit=dev

COPY --from=builder /app/services/ticket-service/dist ./dist

EXPOSE 3002

CMD ["node", "dist/services/ticket-service/src/main.js"]